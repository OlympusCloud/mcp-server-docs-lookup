# Universal Documentation MCP Server Configuration Example
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=production
PORT=3000
API_PORT=3000
LOG_LEVEL=info

# Authentication
JWT_SECRET=your-secure-jwt-secret-change-in-production
JWT_EXPIRY=24h
API_KEYS='[{"id":"key_1","key":"your-api-key","name":"Admin Key","role":"admin","scopes":["*"]}]'
API_SIGNING_SECRET=your-signing-secret-change-in-production

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Cache & Rate Limiting
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
CORS_ORIGINS=http://localhost:*,https://localhost:*
ALLOWED_IPS=
TRUSTED_PROXIES=127.0.0.1
DISABLE_CSP=false

# Repository Settings
DEFAULT_SYNC_INTERVAL=3600000
MAX_CONCURRENT_SYNCS=3
GIT_TIMEOUT=300000

# Embedding Service
EMBEDDING_PROVIDER=local
OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=

# GitHub/GitLab Authentication (optional)
GITHUB_TOKEN=
GITLAB_TOKEN=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=

# Data Retention
RETENTION_DAYS=90
CLEANUP_SCHEDULE=0 2 * * *
MAX_DOCUMENT_AGE=7776000000
MAX_STORAGE_SIZE=10737418240

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
GITHUB_WEBHOOK_PATH=/api/webhooks/github
GITLAB_WEBHOOK_PATH=/api/webhooks/gitlab

# Feature Flags
ENABLE_PROGRESSIVE_CONTEXT=true
ENABLE_TEMPLATE_ENGINE=true
ENABLE_PLUGINS=true
ENABLE_WEBSOCKET=true
ENABLE_WEBHOOKS=true

# Performance
MAX_CHUNK_SIZE=2000
CHUNK_OVERLAP=200
EMBEDDING_BATCH_SIZE=100
SEARCH_TIMEOUT=5000
CONTEXT_GENERATION_TIMEOUT=10000

# Development
DEBUG=false
PRETTY_LOGS=false
DISABLE_AUTH=false