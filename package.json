{
  "name": "@olympuscloud/mcp-docs-server",
  "version": "1.1.0",
  "description": "Universal documentation MCP server for AI coding assistants (Claude Code & GitHub Copilot) with Olympus Cloud integration",
  "main": "dist/server.js",
  "bin": {
    "olympus-mcp": "dist/cli.js",
    "olympus-mcp-wrapper": "dist/mcp-server-wrapper.js"
  },
  "files": [
    "dist/",
    "config/config.example.json",
    "config/schema.json",
    "config/presets/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OlympusCloud/mcp-server-docs-lookup.git"
  },
  "homepage": "https://github.com/OlympusCloud/mcp-server-docs-lookup#readme",
  "bugs": {
    "url": "https://github.com/OlympusCloud/mcp-server-docs-lookup/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "restricted"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/mcp-server-wrapper.js dist/mcp-stdio.js",
    "start": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' node dist/server.js --stdio",
    "dev": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' tsx watch src/server.ts --stdio",
    "modular": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' node dist/modular-server.js",
    "dev:modular": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' tsx watch src/modular-server.ts",
    "enhanced": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' node dist/enhanced-server.js --stdio",
    "dev:enhanced": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' tsx watch src/enhanced-server.ts --stdio",
    "cli": "NODE_OPTIONS='--max-old-space-size=2048 --expose-gc' node dist/cli.js",
    "mcp": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' node dist/mcp-stdio.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "sync": "node dist/cli.js sync",
    "search": "node dist/cli.js search",
    "server": "node dist/server.js --stdio",
    "api": "node dist/cli.js start --mode api --port 3001",
    "status": "node dist/cli.js status",
    "setup": "./setup-olympus.sh"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "ai",
    "coding-assistant",
    "claude",
    "copilot",
    "olympus-cloud",
    "azure",
    "dotnet"
  ],
  "author": "OlympusCloud <dev@olympuscloud.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@qdrant/js-client-rest": "^1.2.0",
    "@types/uuid": "^10.0.0",
    "@xenova/transformers": "^2.6.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "commander": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.11.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "isomorphic-git": "^1.24.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^12.0.0",
    "node-cron": "^3.0.3",
    "rate-limiter-flexible": "^3.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "ws": "^8.13.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/eslint": "^9.6.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
